<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.controlsfx.control.GridView?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ies.pedro.explorer_demo.ExplorerController">
    <top>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <Label text="Ruta" />
                        <TextField HBox.hgrow="SOMETIMES" fx:id="ruta" />

                        <Button mnemonicParsing="false"  fx:id="cargar">
                            <graphic>
                                <FontIcon iconColor="dimgray" iconLiteral="antf-play-circle" iconSize="16"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false"  fx:id="subir">
                            <graphic>
                                <FontIcon iconColor="dimgray" iconLiteral="anto-upload" iconSize="16"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false"  fx:id="borrar">
                            <graphic>
                                <FontIcon iconColor="dimgray" iconLiteral="anto-delete" iconSize="16"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false"  fx:id="reload">
                            <graphic>
                                <FontIcon iconColor="dimgray" iconLiteral="anto-reload" iconSize="16"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane  BorderPane.alignment="CENTER">
            <children>
                <GridView fx:id="grid" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>
